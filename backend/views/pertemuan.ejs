<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Portal Akademik 1B</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c1321c239.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include ('modals/headdosen') %>
    <nav>
        <div class="row no-gutters mt-5">
            <%- include ('modals/navbardosen', {nama, NIP}) %>
            <div class="col-md-10 p-4 pt-4">
                <h3><i class="fa-solid fa-calendar-days me-2"></i>Jadwal Pertemuan</h3><hr>
                <div class="container">
                    <div class="row">
                      <div class="col-2"><h6>Nama Mata Kuliah</h6></div>
                      <div class="col-3"><h6>: <%= name %></h6></div>
                    </div><br>
                </div>
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center" scope="col">Minggu Pertemuan</th>
                                    <th class="text-center" scope="col">Materi</th>
                                    <th class="text-center" scope="col">Metode</th>
                                    <th class="text-center" scope="col">Pengalaman Belajar Mahasiswa</th>
                                    <th class="text-center" scope="col">Hapus</th>
                                    <th class="text-center" scope="col">Edit</th>
                                </tr>
                            </thead>
                            <body>
                                <% pertemuan.forEach((P) => { %>
                                <tr>
                                    <td class="text-center" scope="col"><%= P.week %></td>
                                    <td scope="col"><%= P.material %></td>
                                    <td scope="col"><%= P.method %></td>
                                    <td scope="col"><%= P.student_experience %></td>  
                                    <td class="text-center"><a href="/hapusPertemuan/<%= P.id %>/<%= id %>/<%= name %>" class="btn btn-warning mb-3"><i class="fa-solid fa-trash bg-warning text-black rounded" data-toggle="tooltip" title="Hapus"></a></i></td>      
                                    <td class="text-center"><a href="/editPertemuan/<%= P.id %>/<%= id %>/<%= name %>" class="btn btn-warning mb-3"><i class="fas fa-edit bg-warning text-black rounded" data-toggle="tooltip" title="Edit"></a></i></td>      
                                </tr>
                                <% } ) %>
                            </body>
                        </table>
                        <a href="/tambahPertemuan/<%= id %>/<%= name %>" class="btn btn-warning"><i class="fas fa-plus-square me-2"></i>Tambah Pertemuan</a>
                        <a href="/homeDosen" class="btn btn-success" type="button">Kembali</a>
                    </div>
                </div><br>
            </div>
        </div>
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>