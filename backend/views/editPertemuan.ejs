<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Portal Akademik 1B</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/9c1321c239.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <%- include ('modals/headdosen') %>
    <nav>
        <div class="row no-gutters mt-5">
          <%- include ('modals/navbardosen', {nama, NIP}) %>
            <div class="col-md-10 p-4 pt-4">
                <h3><i class="fa-solid fa-calendar-days me-2"></i>Edit Jadwal Pertemuan</h3><hr>
                <div class="container">
                    <div class="row">
                      <div class="col-2"><h6>Nama Mata Kuliah</h6></div>
                      <div class="col-3"><h6>: <%= name %></h6></div>
                    </div><br>
                </div>
                <div class="card shadow mb-4">
                    <div class="card-body">
                      <form action="/editPertemuan/<%= idEdit%>/<%= id %>/<%= name %>" method="POST">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Minggu Pertemuan</th>
                                    <th class="text-center"><input value="<%= pertemuan.week %>" name="week" type="tambahrps" id="inputtambahrps" class="form-control"></th>
                                </tr>
                                <tr>
                                    <th scope="col">Materi</th>
                                    <th class="text-center"><input value="<%= pertemuan.material %>" name="material" type="tambahrps" id="inputtambahrps" class="form-control"></th>
                                </tr>
                                <tr>
                                    <th scope="col">Metode</th>
                                    <th class="text-center"><input value="<%= pertemuan.method %>" name="method" type="tambahrps" id="inputtambahrps" class="form-control"></th>
                                </tr>
                                <tr>
                                    <th scope="col">Pengalaman Belajar Mahasiswa</th>
                                    <th class="text-center"><textarea value="<%= pertemuan.student_experience %>" name="student_experience" type="tambahrps" id="inputtambahrps" class="form-control">Pengalaman Belajar</textarea></th>
                                </tr>
                            </thead> 
                        </table>
                          <button type="submit" class="btn btn-primary mb-3">Update</button>
                          <button type="" class="btn btn-secondary mb-3">Kembali</button>
                        </form>
                    </div>
                </div><br>
            </div>
        </div>
    </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
</html>