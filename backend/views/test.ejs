<!doctype html>
<html lang="en">
  <head>
  </head>

  <body>
    <nav class="navbar navbar-expand navbar-dark bg-dark shadow-md fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Universitas Andalas</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
    </nav>

    <nav>
        <div class="card text-center col-md-10 pt-4 container-fluid">
            <h3>Rencana Pembelajaran Semester</h3><hr>
            <div class="card-body">
              <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Masukkan Nama/Kode Mata Kuliah" aria-label="Search">
                <button class="btn btn-dark" type="submit">Cari</button>
              </form>
              <br>
              <form action="/lihatRPS" method="GET">
                <table class="table table-dark table-bordered table-hover">
                  <thead>
                      <tr>
                          <th scope="col">No.</th>
                          <th scope="col">Nama Mata Kuliah</th>
                          <th scope="col">Kode Mata Kuliah</th>
                          <th scope="col">Jumlah SKS</th>
                          <th scope="col">Lihat RPS</th>
                          <th scope="col">Export</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% RPS.forEach(R => { %>
                      <tr>
                          <th scope="row">1</th>
                          <td><%= R.name %></td>
                          <td><%= R.code %></td>
                          <td><%= R.credit %></td>
                          <td><a href="rpspweblanding.html"><i class="fa-solid fa-eye p-2 text-white rounded" data-toggle="tooltip" title="Open"></i></a></td>
                          <td><a href="exportrps.html"><i class="fa-solid fa-cloud-arrow-down p-2 text-white rounded" data-toggle="tooltip" title="Export"></i></a></td>
                      </tr>
                     <% }) %>
                  </tbody>
                </table>
              </form>
              
              <p>Masuk Sebagai?</p>
              <a href="mainlogin.html" class="btn btn-warning">Log In</a>
            </div>
            <div class="card-footer text-muted">
              Portal Akademik Universitas Andalas
            </div>
        </div>
    </nav>
  </body>
</html>